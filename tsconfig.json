{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "dist",
        "lib": ["es5","es6","dom"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}